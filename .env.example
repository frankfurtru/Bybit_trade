# Copy to .env and fill values
BYBIT_API_KEY=your_key_here
BYBIT_API_SECRET=your_secret_here


# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=

# LLM (OpenAI-compatible) credentials
ZAI_API_KEY=
ZAI_BASE_URL=https://api.novita.ai/openai
LLM_MODEL=openai/gpt-oss-120b
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# Bybit Configuration (optional)
BYBIT_API_KEY=
BYBIT_API_SECRET=
BYBIT_TESTNET=false
BYBIT_ENVIRONMENT=demo
BYBIT_PUBLIC_ONLY=true  # Set to false to enable private endpoints

# Bot Authentication
BOT_AUTH_USERNAME=admin
BOT_AUTH_PASSWORD=admin123
BOT_AUTH_STORE=data/auth.json
BOT_AUTH_REQUIRED=false  # Set to true to require authentication

# Enhanced Configuration
MCP_ENABLED=true
API_DOCS_PATH=api-docs.txt
DEFAULT_CATEGORY=spot
MAX_API_RETRIES=3
